<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> <mapper namespace="com.etop.management.dao.RemindDao">         <select id="searchbytarget" resultType="com.etop.management.bean.Remind" parameterType="Map">				SELECT *				from (				SELECT					*				FROM					etop_remind				WHERE					target = #{target}				AND STATUS = "0"				AND  top="1"				ORDER BY					update_time ASC,					create_time DESC) as t1				UNION ALL				SELECT *				from (				SELECT					*				FROM					etop_remind				WHERE					target = #{target}				AND STATUS = "0"				AND  top!="1"				ORDER BY					create_time DESC)as t2        </select>                		<insert id="addRemind"  parameterType="com.etop.management.bean.Remind" >				insert into etop_remind		(id,remind_type,title,content,status,target,create_time,update_time,top)		values(		#{id},#{remindType},#{title},#{content},#{status},#{target},#{createTime},#{updateTime},#{top}		)				</insert>				<insert id="insert" parameterType="list">	       insert into etop_remind (id,remind_type,title,content,status,target,create_time,update_time,top)	        values        <foreach collection="list" item="item" index="index" separator="," >            (#{item.id},#{item.remindType},#{item.title},#{item.content},#{item.status},#{item.target},#{item.createTime},#{item.updateTime},#{item.top})        </foreach>    	</insert>				 <select id="searchbyId" resultType="com.etop.management.bean.Remind" parameterType="Map">            SELECT				*			FROM				etop_remind			WHERE			   id=#{id}			             </select>                <update id="upadteStatus"  parameterType="com.etop.management.bean.Remind">                UPDATE 			etop_remind		SET			status ="1"		WHERE		   id=#{id}        </update>        <update id="upadteTop"  parameterType="com.etop.management.bean.Remind">                UPDATE 			etop_remind		SET			update_time=#{updateTime}		WHERE		   id=#{id}        </update>                        <update id="finalTop"  parameterType="com.etop.management.bean.Remind">                UPDATE 			etop_remind		SET			update_time=#{updateTime},			top=#{top}				WHERE		   id=#{id}        </update></mapper>